{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "^/api/shopify-auth/callback$",
      "dest": "/backend/api/shopify-auth.js"
    },
    {
      "src": "^/api/shopify-auth$",
      "dest": "/backend/api/shopify-auth.js"
    },
    {
      "src": "^/api/redesign-room$",
      "dest": "/backend/api/redesign-room.js"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "/backend/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

